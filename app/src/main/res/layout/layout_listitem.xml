<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_marginBottom="8dp"
    android:padding="5dp"
    android:layout_margin="2dp"
    >
<LinearLayout
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:padding="7dp"
        android:background="@drawable/item_header_selector"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"
        app:riv_oval="false"
        app:riv_border_color="@color/cardview_dark_background"
        app:riv_border_width="2dip"
        app:riv_corner_radius="10dp">

    </com.makeramen.roundedimageview.RoundedImageView>

        <LinearLayout
            android:background="@color/cardview_dark_background"
            android:padding="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/title_name"
                android:textColor="#fff"
                android:textSize="21sp"></TextView>
            <TextView
                android:background="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="rating"
                android:id="@+id/rating"
                android:textColor="#fff"
                android:textSize="15sp"></TextView>
            <TextView
                android:background="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="released"
                android:id="@+id/released"
                android:textColor="#fff"
                android:textSize="15sp"></TextView>
            <TextView
                android:background="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platforms"
                android:id="@+id/platforms"
                android:textColor="#fff"
                android:textSize="15sp"></TextView>

        </LinearLayout>


    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/item_header_selector_back"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/favoriteBox"
            style="?android:attr/starStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:focusable="false">

        </CheckBox>
    </LinearLayout>



</LinearLayout>




</RelativeLayout>