<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_marginBottom="8dp"
    android:padding="5dp"
    android:layout_margin="2dp"
    >
<LinearLayout
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:padding="5dp"
        android:background="@drawable/item_header_slector"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"
        app:riv_oval="false"
        app:riv_border_color="@color/cardview_dark_background"
        app:riv_border_width="2dip"
        app:riv_corner_radius="10dp">

    </com.makeramen.roundedimageview.RoundedImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:background="@color/cardview_dark_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="source"
            android:id="@+id/source"
            android:textColor="#fff"
            android:textSize="20sp"></TextView>
        <TextView
            android:padding="5dp"
            android:background="@color/cardview_dark_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title_na me title _name tit le_name
            title_name title_n ame title_name
            title_name title_name title_name"
            android:id="@+id/title_name"
            android:textColor="#fff"
            android:textSize="17sp"></TextView>
    </LinearLayout>



</LinearLayout>




</RelativeLayout>